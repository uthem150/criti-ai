{
  "version": 2,
  "name": "criti-ai-challenge",
  "buildCommand": "npm run build:shared && npm run build:challenge",
  "framework": null,
  "outputDirectory": "challenge-web/dist",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/challenge",
      "destination": "/index.html"
    },
    {
      "source": "/challenge/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

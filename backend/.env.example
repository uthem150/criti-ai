# Gemini AI API
GEMINI_API_KEY=your_gemini_api_key_here

# YouTube Data API v3 (빠른 분석용)
YOUTUBE_API_KEY=your_youtube_api_key_here

# yt-dlp Path (자막 추출용)
# Docker: 자동 설정됨 (/usr/bin/yt-dlp)
# 로컬: yt-dlp 설치 경로 지정 (예: /usr/local/bin/yt-dlp)
# YT_DLP_PATH=yt-dlp

# Server Configuration  
PORT=3001
NODE_ENV=development
FRONTEND_URL=https://criti-ai.vercel.app/

# Redis Configuration (캐싱용)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Database (SQLite - 개발용)
DATABASE_URL="file:./criti-ai.db"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000